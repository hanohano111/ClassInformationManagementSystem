<t-navbar title="{{courseInfo.name || '班级详情'}}" left-arrow />
<view class="page course-detail page-with-navbar">
  <view class="course-detail__header">
    <view class="course-info">
      <view class="course-name">{{courseInfo.name || '加载中...'}}</view>
    </view>
  </view>
  
  <view class="course-detail__content">
    <t-cell-group theme="card">
      <t-cell title="签到" arrow bindclick="goToAttendance">
        <t-icon slot="icon" name="check-circle" size="40rpx" color="#0052d9" />
      </t-cell>
      <t-cell title="班级信息" arrow bindclick="goToClassInfo">
        <t-icon slot="icon" name="info-circle" size="40rpx" color="#0052d9" />
      </t-cell>
      <t-cell title="通知" arrow bindclick="goToNotices">
        <t-icon slot="icon" name="notification" size="40rpx" color="#0052d9" />
      </t-cell>
      <t-cell title="作业" arrow bindclick="goToAssignments">
        <t-icon slot="icon" name="file-text" size="40rpx" color="#0052d9" />
      </t-cell>
      <t-cell title="请假申请" arrow bindclick="goToLeave">
        <t-icon slot="icon" name="edit" size="40rpx" color="#0052d9" />
      </t-cell>
      <t-cell 
        wx:if="{{isAdmin}}"
        title="管理员设置" 
        arrow 
        bindclick="goToAdminSettings"
      >
        <t-icon slot="icon" name="setting" size="40rpx" color="#0052d9" />
      </t-cell>
    </t-cell-group>
  </view>
</view>
